{
  "name": "mawejs",
  "description": "Editor for writers.",
  "author": "Markus Koskimies <mkoskim@gmail.com>",
  "version": "0.15.0",
  "main": "./public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently -i \"wait-on http://localhost:3000 && npm run dev:electron\" npm:dev:react",
    "dev:electron": "nodemon -w public --exec \"electron .\"",
    "dev:react": "cross-env BROWSER=none npm run react-start",
    "audit": "npm audit --production",
    "build": "npm run react-build && npm run electron-build",
    "release": "npm run react-build && npm run electron-build-mwl",
    "electron-build": "electron-builder",
    "electron-build-mwl": "electron-builder -wl",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "fresh": "rm -rf dist build node_modules package-lock.json && npm install",
    "fix": "sudo chown root node_modules/electron/dist/chrome-sandbox && sudo chmod 4755 node_modules/electron/dist/chrome-sandbox"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@handlewithcare/react-prosemirror": "^2.3.4",
    "@hello-pangea/dnd": "^18.0.1",
    "@mui/icons-material": "^6.4.8",
    "@mui/material": "^6.4.8",
    "buffer": "^6.0.3",
    "electron-better-ipc": "^2.0.1",
    "electron-debug": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "fs-extra": "^11.3.0",
    "immer": "^10.1.1",
    "is-gzip": "^2.0.0",
    "is-hotkey": "^0.2.0",
    "mammoth": "^1.8.0",
    "material-ui-popup-state": "^5.3.3",
    "nanoid": "^5.1.5",
    "notistack": "^3.0.2",
    "pako": "^2.1.0",
    "prosemirror-commands": "^1.7.0",
    "prosemirror-history": "^1.4.1",
    "prosemirror-inputrules": "^1.5.0",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.25.0",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.10.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-infinite-scroll-component": "^6.1.0",
    "recharts": "^2.15.1",
    "slate": "^0.112.0",
    "slate-dom": "^0.112.2",
    "slate-history": "^0.110.3",
    "slate-react": "^0.112.1",
    "stream": "^0.0.3",
    "use-immer": "^0.11.0",
    "uuid": "^11.1.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "nodemon": "^3.1.9",
    "react-scripts": "^5.0.1",
    "wait-on": "^8.0.3"
  },
  "build": {
    "extraResources": [
      "examples/tutorial/*"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version"
    ]
  }
}
